{
  "name": "kloudit-kiosk",
  "productName": "KloudIT Kiosk",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux deb --arm64"
  },
  "build": {
    "appId": "com.kloudit.kiosk",
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Video",
      "icon": "public/favicon.ico"
    },
    "deb": {
      "afterInstall": "build/after-install.sh"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-keyboard": "^3.6.15"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
