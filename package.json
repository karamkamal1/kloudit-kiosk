{
  "name": "kloudit-kiosk",
  "productName": "KloudIT Kiosk",
  "version": "1.3.8",
  "description": "Professional Jellyfin Kiosk Controller",
  "author": "KloudIT <info@kloudit.ca>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder --linux deb --arm64"
  },
  "build": {
    "appId": "com.kloudit.kiosk",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Video",
      "icon": "public/logo.png",
      "maintainer": "KloudIT <info@kloudit.ca>"
    },
    "deb": {
      "afterInstall": "build/after-install.sh"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^5.2.1",
    "ip": "^2.0.1",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-keyboard": "^3.6.15"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  }
}
